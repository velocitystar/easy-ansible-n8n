map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      keep-alive;
}

server {
    listen 80;
    server_name {{ domain_name }};

    # Allow Let's Encrypt challenges
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    # Redirect all other traffic to HTTPS
    location / {
        {% if nginx_https_port is defined and nginx_https_port != 443 %}
        return 301 https://$host:{{ nginx_https_port }}$request_uri;
    {% endif %}
}

{% if ssl_enabled | default(false) %}
server {
    listen {{ nginx_https_port }} ssl;
    server_name {{ domain_name }};

    ssl_certificate /etc/letsencrypt/live/{{ domain_name }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ domain_name }}/privkey.pem;

    # SSL Parameters (Guidelines from certbot/mozilla usually recommended)
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    location / {
        proxy_pass http://localhost:{{ n8n_port }};
        proxy_http_version 1.1;
        
        # Headers for WebSocket/SSE
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        
        proxy_set_header Host {{ domain_name }};
        proxy_set_header Origin https://{{ domain_name }};
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Optimizations for n8n
        proxy_buffering off;
        proxy_cache off;
        chunked_transfer_encoding off;
        
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
        
        client_max_body_size 50M;
    }
}
{% endif %}
